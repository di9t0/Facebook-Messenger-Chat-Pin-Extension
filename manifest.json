{
  "manifest_version": 3,
  "name": "Facebook Messenger Pin Chats",
  "version": "1.0.0",
  "description": "Pin important chats in Facebook Messenger to keep them at the top of your chat list",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://www.facebook.com/*",
    "*://facebook.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.facebook.com/messages*",
        "*://facebook.com/messages*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Messenger Pin Extension"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.js", "styles.css"],
      "matches": ["*://www.facebook.com/*", "*://facebook.com/*"]
    }
  ]
}
